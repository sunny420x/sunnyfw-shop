<!DOCTYPE html>
<html>
<head>
    <title><%=result[0].title%> | Sunny-Framework</title>
    <%-include('include/head')%>
</head>
<body>
    <%-include('include/nav')%>
    <div class="container white p-20" id="mainpage">
        <div class="grid-9-3">
            <div>
                <div class="px-20">
                    <div class="mb-30">
                        <h1><%=result[0].title%></h1>
                        <a href="/category/<%=result[0].category%>" class="capsule darkblue"><%=result[0].category%></a>
                        <h3><i class="fa-solid fa-coins icon"></i> <%=result[0].price%></h3>
                    </div>
                    <img src="<%=result[0].cover%>" alt="Cover Image" class="w-100">
                    <div class="mt-30">
                        <button class="btn red"><i class="fa-solid fa-cart-shopping icon"></i> Add to Cart</button>
                        <%-result[0].contents%>
                    </div>
                </div>
            </div>
            <div class="px-20 pb-30">
                <h1 class="bl-orange">More Products</h1>
                <div class="grid-1">
                    <%
                    more_products.forEach((row) => {
                    %>
                    <div class="media">
                        <div class="cover"><img class="w-100" src="<%=row.cover%>" /></div>
                        <div class="content">
                          <h1><a href="/view/<%=row.id%>"><%=row.title%></a></h1>
                          <p><%=row.price%></p>
                          <p><%=row.contents.replace(/(<([^>]+)>)/ig,'').substring(0,200)%></p>
                          <button class="btn darkblue" onclick="window.location.href='/view/<%=row.id%>'"><i class="fa-solid fa-eye icon"></i>View</button>
                          <button class="btn red"><i class="fa-solid fa-cart-shopping icon"></i> Add to Cart</button>
                        </div>
                      </div>
                    <%
                    })
                    %>
                </div>
            </div>
        </div>
    </div>
    <%-include('include/footer')%>
</body>
</html>