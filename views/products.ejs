<!DOCTYPE html>
<html>
<head>
    <title>Products | Sunny-Framework</title>
    <%-include('include/head')%>
</head>
<body>
    <%-include('include/nav')%>
    <div class="container white p-20 pb-30" id="mainpage">
        <div class="grid-2-10">
            <div class="p-10">
                <h1 class="bl-orange">Category</h1>
                <%
                category.forEach((row) => {
                %>
                <a href="" class="capsule darkblue"><%=row.category%></a>
                <%
                })
                %>
            </div>
            <div class="p-10">
                <h1 class="bl-darkblue">Our Products</h1>
                <div class="grid-4">
                    <%
                    products.forEach((row) => {
                    %>
                    <div class="media">
                        <div class="cover"><img class="w-100" src="<%=row.cover%>" /></div>
                        <div class="content p-10">
                          <h1><a href="/view/<%=row.id%>"><%=row.title%></a></h1>
                          <p><%=row.price%></p>
                          <p><%=row.contents.replace(/(<([^>]+)>)/ig,'').substring(0,200)%></p>
                          <button class="btn darkblue" onclick="window.location.href='/view/<%=row.id%>'"><i class="fa-solid fa-eye icon"></i>View</button>
                          <button class="btn red" onclick="addtocart('<%=row.title%>')"><i class="fa-solid fa-cart-shopping icon"></i> Add to Cart</button>
                        </div>
                      </div>
                    <%
                    })
                    %>
                </div>
            </div>
        </div>
    </div>
    <%-include('include/footer')%>
</body>
</html>